# else
#   export EDITOR='mvim'
# fi

# Compilation flags
# export ARCHFLAGS="-arch x86_64"

# ssh
# export SSH_KEY_PATH="~/.ssh/dsa_id"

# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias cls="clear"
alias tailf="tail -f"
alias ll="ls -al"
alias gu="git stash && git pull && git stash pop"
PROMPT='%{$fg_bold[red]%}âžœ %{$fg_bold[green]%}%p%{$fg[cyan]%}%d %{$fg_bold[blue]%}$(git_prompt_info)%{$fg_bold[blue]%}% %{$reset_color%}>'

# Go
export GOPATH="$HOME/Workspace/go"
export GOBIN="$GOPATH/bin"
export PATH="$PATH:$GOBIN"

# Rust
source $HOME/.cargo/env

# Java
export JAVA_8_HOME=$(/usr/libexec/java_home -v1.8)
alias java8='export JAVA_HOME=$JAVA_8_HOME'
export JAVA_11_HOME=$(/usr/libexec/java_home -v11)
alias java11='export JAVA_HOME=$JAVA_11_HOME'

# The Great Fire Wall
# export http_proxy=http://127.0.0.1:1087
# export https_proxy=http://127.0.0.1:1087
export no_proxy="127.0.0.1, localhost, *.cnn.com, 192.168.1.10, domain.com:8080, 172.16.10.2"

# LLVM
export PATH="/usr/local/opt/llvm/bin:$PATH"
export LDFLAGS="-L/usr/local/opt/llvm/lib"
export CPPFLAGS="-I/usr/local/opt/llvm/include"

# MySQL
export PATH="/usr/local/mysql/bin:$PATH"

# Automatically active virtual environment
function cd() {
  if [[ -d ./venv ]] ; then
    deactivate
  fi

  builtin cd $1

  if [[ -d ./venv ]] ; then
    . ./venv/bin/activate
  fi
}

# Maven
export MAVEN_OPTS="-Xmx2g -XX:ReservedCodeCacheSize=512m"

